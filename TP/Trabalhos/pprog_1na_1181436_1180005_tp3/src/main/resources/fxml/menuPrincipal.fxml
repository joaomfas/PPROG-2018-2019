<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.MenuPrincipalController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Menu">
                    <items>
                        <MenuItem fx:id="efetuarPedidoButton" mnemonicParsing="false" onAction="#handleEfetuarPedidoButton" text="Efetuar pedido de prestação de serviço" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="indicarDisponibilidadeButton" mnemonicParsing="false" onAction="#handleIndicarDisponibilidadeButton" text="Indicar disponibilidade diária de prestação de serviços" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="atribuirPedidoButton" mnemonicParsing="false" onAction="#handleAtribuirPedidoButton" text="Atribuir pedido de prestação de serviço a um prestador de serviço" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="sairButton" mnemonicParsing="false" onAction="#handleSairButton" text="Sair" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Ajuda">
              <items>
                <MenuItem fx:id="sobreButton" mnemonicParsing="false" onAction="#handleSobreButton" text="Sobre" />
              </items>
            </Menu>
            </menus>
        </MenuBar>
      <AnchorPane prefHeight="408.0" prefWidth="640.0">
         <children>
            <ImageView fitHeight="207.0" fitWidth="522.0" layoutX="59.0" layoutY="107.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../files/isep-logo.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
    </children>
</VBox>
